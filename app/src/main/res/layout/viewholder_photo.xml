<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/viewholder_ripple">

    <ImageView
        android:id="@+id/photoImage"
        android:layout_width="@dimen/photo_image_size"
        android:layout_height="@dimen/photo_image_size"
        android:adjustViewBounds="true"
        android:contentDescription="@string/detail_image_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loading_wheel" />

    <TextView
        android:id="@+id/photoTitle"
        style="@style/PhotoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/photo_margin_title"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/photoImage"
        app:layout_constraintEnd_toEndOf="@+id/photoImage"
        app:layout_constraintStart_toStartOf="@+id/photoImage"
        tools:text="officia porro iure quia iusto qui ipsa ut modi" />

</androidx.constraintlayout.widget.ConstraintLayout>